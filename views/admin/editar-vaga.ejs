<%- include('header')%>
    <h2>
        Editar vaga:
        <a href="/admin/vagas/">Vagas</a>
    </h2>
    <div>
        <form method="POST">
            <label>Título: </label>
            <input type="text" name="titulo" value="<%= vaga.titulo %>">
            <br>
            <label>Descrição: </label>
            <textarea name="descricao"><%= vaga.descricao %></textarea>
            <br>
            <label>Categoria:</label>
            <select name="categoria">
                <% categorias.forEach( categorias => { %>
                <option value="<%= categorias.id %>" <% if(categorias.id == vaga.categoria){ %> selected <% } %> > <%= categorias.categoria%></option>
                <% }) %>
            </select>
            <br>
            <button>Salvar vaga</button>
        </form>
    </div>
<%- include('footer') %>